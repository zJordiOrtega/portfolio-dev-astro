---
export interface Props {
  title: string;
  description: string;
  date: string;
}

const { title, description, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-mocha-lavender"
  >{date}</time
>
<h3 class="text-lg font-semibold text-mocha-red mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-200">
  {description}
</p>
